{
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(vendor/*)",
      "Bash(bin/*)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(secrets/*)",
      "Read(**/credentials*)",
      "Read(**/*secret*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-bash.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-write.sh"
          }
        ]
      }
    ]
  }
}
